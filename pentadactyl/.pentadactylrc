loadplugins '\.(js|penta)$'
group user
set cdpath=''

set passkeys+=feedly.com:jkJK
set passkeys+=pandora.com:<Right><Space>
set passkeys+=reddit.com:jkJKazxXcC=-[]1234567890
set passkeys+=youtube.com:k
set passkeys+=soundcloud.com:<Space><Left><Right><Up><Down>lLMPRS1234567890

nmap J gt
nmap K gT

hi StatusLineNormal   -a font-size: 9pt;
hi StatusLineBroken   -a font-size: 9pt;
hi StatusLineSecure   -a font-size: 9pt;
hi StatusLineExtended -a font-size: 9pt;

nmap -builtin s :open ddg<Space>
nmap <S-s> :tabopen ddg<Space>

set scroll=45
